# Example environment file for Go Matter Server
# Copy this file to .env to use it automatically, or specify with --env-file flag

# Server Configuration
MATTER_SERVER_PORT=5580
MATTER_SERVER_LISTEN_ADDRESSES=127.0.0.1,::1

# Storage Configuration
MATTER_STORAGE_PATH=./.matter_server

# Matter Configuration
MATTER_MATTER_VENDOR_ID=65521
MATTER_MATTER_FABRIC_ID=1
MATTER_MATTER_PAA_ROOT_CERT_DIR=
MATTER_MATTER_ENABLE_TEST_NET_DCL=false
MATTER_MATTER_DISABLE_SERVER_INTERACTIONS=false

# Network Configuration
MATTER_NETWORK_PRIMARY_INTERFACE=

# Bluetooth Configuration
MATTER_BLUETOOTH_ADAPTER_ID=-1
# MATTER_BLUETOOTH_ENABLED is ignored. Bluetooth enables automatically when
# MATTER_BLUETOOTH_ADAPTER_ID >= 0 and BlueZ/DBus are available.

# OTA Configuration
MATTER_OTA_PROVIDER_DIR=

# mDNS Configuration
MATTER_MDNS_ENABLED=true
MATTER_MDNS_HOSTNAME=my-matter-server

# Logging Configuration
MATTER_LOG_LEVEL=info
MATTER_LOG_FORMAT=console

# Development Configuration (optional)
# MATTER_SERVER_DEV=1
